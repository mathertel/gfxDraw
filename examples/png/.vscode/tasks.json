{
  "tasks": [
    {
      "label": "Build example",
      "type": "cppbuild",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/I${workspaceFolder}/../../src",
        "/nologo",
        "/Fe${workspaceFolder}\\main.exe",
        "${workspaceFolder}/*.cpp",
        "${workspaceFolder}/../../src/*.cpp",
        "/Fo:.\\obj\\"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Compile the png example"
    },
    {
      "label": "Clean example",
      "type": "shell",
      "command": "del *.png *.pdb *.ilk *.exe obj\\*.obj",
      "problemMatcher": [],
      "detail": "Delete all interim and output files"
    }
  ],
  "version": "2.0.0"
}